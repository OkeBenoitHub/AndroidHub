<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.OkeBenoitHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowActionBar">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OkeBenoitHub" parent="Base.Theme.OkeBenoitHub" />
    <style name="Theme.OkeBenoitHub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OkeBenoitHub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.OkeBenoitHub.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/edit_text_content_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorAccent">@color/edit_text_content_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NestedScrollBarStyle">
        <item name="android:scrollbarFadeDuration">2</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/button_text_colored</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/button_text_colored</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/edit_text_content_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="fontFamily">@font/lato_medium</item>
        <item name="background">@color/white</item>
    </style>
</resources>